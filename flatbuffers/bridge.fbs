namespace model;

enum Hash : int {
  SHA256 = 0,
  SHA224 = 1,
  SHA384 = 2,
  SHA512 = 3,
}

enum Compression : int {
  NONE = 0,
  ZLIB = 1,
  ZIP = 2,
}

enum Cipher : int {
  AES128 = 0,
  AES192 = 1,
  AES256 = 2,
}

